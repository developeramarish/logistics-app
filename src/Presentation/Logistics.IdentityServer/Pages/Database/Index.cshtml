@page
@model Logistics.IdentityServer.Pages.Debug.Index

<ul>
    <li class="mb-3">
        Master Database Connection String: @Model.View.MasterDbConnectionString
        <form method="post" asp-page-handler="TestMasterDb">
            <button type="submit" class="btn btn-primary">Test Master DB Connection</button>
        </form>
        @if (!string.IsNullOrEmpty(Model.View.TestMasterDbResult))
        {
            <div class="alert alert-info mt-2">@Model.View.TestMasterDbResult</div>
        }
    </li>
    <li class="mb-3">
        Tenant Database Connection String: @Model.View.TenantDbConnectionString
        <form method="post" asp-page-handler="TestTenantDb">
            <button type="submit" class="btn btn-primary">Test Tenant DB Connection</button>
        </form>
        @if (!string.IsNullOrEmpty(Model.View.TestTenantDbResult))
        {
            <div class="alert alert-info mt-2">@Model.View.TestTenantDbResult</div>
        }
    </li>
    <li class="mb-3">
        Tenants Database Settings: @Model.View.TenantsDatabaseSettings
    </li>
</ul>